<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.teamdev.webapp1.model.User</class>
        <class>com.teamdev.webapp1.model.Role</class>
        <class>com.teamdev.webapp1.model.UserProfile</class>
        <class>com.teamdev.webapp1.model.Activation</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>


    </persistence-unit>

</persistence>